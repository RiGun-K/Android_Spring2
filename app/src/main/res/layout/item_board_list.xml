<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:layout_margin="4dp">

    <TextView
        android:id="@+id/board_idView"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:text="글 번호 들어갈자리"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleView"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginStart="-270dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="제목 들어갈자리"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/board_idView"
        app:layout_constraintTop_toTopOf="@+id/board_idView" />

    <TextView
        android:id="@+id/contentView"
        android:layout_width="122dp"
        android:layout_height="76dp"
        android:layout_marginEnd="150dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="내용 들어갈자리"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/titleView"
        app:layout_constraintTop_toTopOf="@+id/titleView" />

    <TextView
        android:id="@+id/saved_timeView"
        android:layout_width="53dp"
        android:layout_height="102dp"
        android:layout_marginStart="-200dp"
        android:layout_marginTop="4dp"
        android:text="시간들어갈자리"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="@+id/contentView"
        app:layout_constraintTop_toTopOf="@+id/contentView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/board_viewsView"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="68dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="조회수 들어갈자리"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>